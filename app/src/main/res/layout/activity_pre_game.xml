<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/colorText"
            android:textSize="24sp"
            android:id="@+id/parameters_textview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="160dp"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:id="@+id/game_type_textview" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <RadioButton
                    android:id="@+id/computer_radio_button"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="computer_radio_clicked"
                    android:textColor="@color/colorText" />

                <RadioButton
                    android:id="@+id/human_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="human_radio_clicked"
                    android:textColor="@color/colorText" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="160dp"
                android:height="143dp"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:id="@+id/difficulty_textview" />

            <RadioGroup
                android:id="@+id/difficulty_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <RadioButton
                    android:id="@+id/easy_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="easy_radio_clicked"
                    android:textColor="@color/colorText" />

                <RadioButton
                    android:id="@+id/normal_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="normal_radio_clicked"
                    android:textColor="@color/colorText" />

                <RadioButton
                    android:id="@+id/hard_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="hard_radio_clicked"
                    android:textColor="@color/colorText" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:width="160dp"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:id="@+id/grid_size_textview" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <RadioButton
                    android:id="@+id/cell3x3_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="cell3x3_radio_clicked"
                    android:textColor="@color/colorText" />

                <RadioButton
                    android:id="@+id/cell4x4_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="cell4x4_radio_clicked"
                    android:textColor="@color/colorText" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:width="160dp"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:id="@+id/mark_type_textview" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <RadioButton
                    android:id="@+id/cross_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="cross_radio_clicked"
                    android:textColor="@color/colorText" />

                <RadioButton
                    android:id="@+id/oval_radio_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="190dp"
                    android:background="@color/colorElementsBackground"
                    android:onClick="oval_radio_clicked"
                    android:textColor="@color/colorText" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:width="120dp"
                android:background="@color/colorElementsBackground"
                android:onClick="start_button_pressed"
                android:id="@+id/start_button" />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:width="120dp"
                android:background="@color/colorElementsBackground"
                android:onClick="back_button_pressed"
                android:id="@+id/back_button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>