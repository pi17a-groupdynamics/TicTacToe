<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_margin="25dp"
        android:contentDescription="@string/name_description_icon"
        android:src="@drawable/tictactoe_img"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="71dp" />

    <Button
        android:id="@+id/button_start"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:onClick="start_button_pressed"
        android:text="@string/name_button_start" />

    <Button
        android:id="@+id/button_settings"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:onClick="settings_button_pressed"
        android:text="@string/name_button_settings" />

    <Button
        android:id="@+id/button_exit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:onClick="exit_button_pressed"
        android:text="@string/name_button_exit" />

</LinearLayout>